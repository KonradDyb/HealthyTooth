@model HealthyTooth.ViewModels.HomeViewModel


<title>@ViewBag.Title</title>

<h1>Our Dentists</h1>

@foreach (var doctor in Model.Doctors)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="~/images/@doctor.ImagePath" />
            <div class="caption">
                <h3 class="pull-right">Lorem Ipsum</h3>
                <h2>@doctor.Name</h2>
                <p>@doctor.ShortDescription</p>
            </div>
        </div>
    </div>

}
